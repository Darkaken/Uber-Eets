


<!DOCTYPE html>
<html>
<title>Uber Eets</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
body {font-family: "Times New Roman", Georgia, Serif; background-color: LightGray}
h1, h2, h3, h4, h5, h6 {
  font-family: "Playfair Display";
  letter-spacing: 5px;
}
</style>
<body>

<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
    <a href="/" class="w3-bar-item w3-button">Uber Eets</a>
    <div class="w3-right w3-hide-small">
      <a href="/users/admin" class="w3-bar-item w3-button">Volver a Admin</a>
    </div>
  </div>
</div>

<body>
  <div class="w3-content" style="max-width:1100px">
    <div class="w3-row w3-padding-64" id="about">
      <div class="w3-col m6 w3-padding-large">

        <h3>Informacion restaurante "<%= @restaurante.nombre %>"</h3>

        <% if @restaurante.avatar.attached? == true %>
          <%= image_tag(@restaurante.avatar, size: "500x300") %>
        <% end %>

        <p>Nombre: <%= @restaurante.nombre %></p>
        <p>Correo: <%= @restaurante.correo %></p>
        <p>Direccion: <%= @restaurante.direccion %></p>
        <p>Telefono: <%= @restaurante.telefono %></p>
        <p>Valoracion: <%= @puntaje%> </p>

        <% if @ventas_totales != 0 and @cantidad_pedidos != 0 %>
          <p> Ventas Totales: <%=@ventas_totales%> </p>
          <p> Cantidad pedidos: <%=@cantidad_pedidos%> </p>
        <% end %>

      </div>
    </div>
  </div>
</body>



<!-- Footer -->
<footer class="w3-center w3-light-grey w3-padding-32">
  <p>Uber Eets</p>
</footer>

</body>
</html>
