
<!DOCTYPE html>
<html>
<title>Uber Eets</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
body {font-family: "Times New Roman", Georgia, Serif; background-color: LightGray}
h1, h2, h3, h4, h5, h6 {
  font-family: "Playfair Display";
  letter-spacing: 5px;
}
</style>
<body>

  <script>
  function datos_invalidos() {
    alert("Datos Invalidos");
  }
  </script>

  <script>
  function exitosignup() {
    alert("Usuario Registrado");
  }
  </script>

<% if @msg.nil? == false %>
  <% if @msg == 'di' %>
    <p><script>datos_invalidos();</script></p>
  <% elsif @msg == 'es' %>
    <p><script>exitosignup();</script></p>
  <% end %>
<% end %>

<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
    <a href="/" class="w3-bar-item w3-button">Uber Eets</a>
    <!-- Right-sided navbar links. Hide them on small screens -->
    <div class="w3-right w3-hide-small">
      <a href="/#restaurantes" class="w3-bar-item w3-button">Restaurantes</a>
      <a href="/#login" class="w3-bar-item w3-button">Ingresar</a>
      <a href="/#signup" class="w3-bar-item w3-button">Registrarse</a>
    </div>
  </div>
</div>

<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:2200px;min-width:500px" id="home">
  <img class="w3-image" src="https://wallpaperaccess.com/full/767277.jpg" alt="Uber Eets" width="2200" height="800">
  <div class="w3-display-bottomleft w3-padding-large w3-opacity">
    <h1 class="w3-xxlarge" style="color: white">Uber Eets</h1>
  </div>
</header>



<!-- Page content -->
<div class="w3-content" style="max-width:1500px;">

  <!-- Restaurantes Section -->
  <div class="w3-row w3-padding-64" id="restaurantes">

    <% count = 1 %>
    <% @restaurantes.each do |rest| %>
      <% if count%2 == 1 %>
        <div class="w3-col l6 w3-padding-large"> <!-- Div de Izquierda -->
          <% if rest.avatar.attached? == true %>
            <%= image_tag(rest.avatar, size: "500x300") %>
            <div class="w3-row w3-padding-64" id="menu">
              <div class="w3-col l6 w3-padding-large">
                <a href=<%= "/dashboard/#{rest.id}" %> style="text-decoration:none;"><h4><%=rest.nombre%></h4></a>
              </div>
            </div>

          <% end %>
        </div>
      <% else %>
        <div class="w3-col m6 w3-padding-large"> <!-- Div de Derecha -->
          <% if rest.avatar.attached? == true %>
            <%= image_tag(rest.avatar, size: "500x300") %>
            <div class="w3-row w3-padding-64" id="menu">
              <div class="w3-col m6 w3-padding-large">
                <a href=<%= "/dashboard/#{rest.id}" %> style="text-decoration:none;"><h4><%=rest.nombre%></h4></a>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      <% count += 1%>
    <% end %>
  </div>

  <hr>

  <!-- Menu Section -->
  <div class="w3-container w3-padding-64" id="login">
    <h1>Ingresar</h1><br>
    <form action="/login" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Nombre de usuario" required name="datos[nombre]"></p>
      <p><input class="w3-input w3-padding-16" type="password" placeholder="Contraseña" required name="datos[password]"></p>
      <p>
        <label>Tipo de usuario:</label>
        <input type="radio" name="tipo" value=0> Usuario
        <input type="radio" name="tipo" value=1> Restaurante<br>
      </p>
      <p><button class="w3-button w3-light-grey w3-section" type="submit">Ingresar</button></p>
    </form>
  </div>

  <hr>

  <!-- Contact Section -->
  <div class="w3-container w3-padding-64" id="signup">
    <h1>Registrarse</h1><br>
    <form action="/signup" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Nombre" required name="datos[nombre]"></p>
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Correo" required name="datos[correo]"></p>
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Direccion" required name="datos[direccion]"></p>
      <p><input class="w3-input w3-padding-16" type="text" placeholder="Telefono" required name="datos[telefono]"></p>
      <p><input class="w3-input w3-padding-16" type="password" placeholder="Contraseña" required name="datos[password]"></p>
      <p>
        <label>Tipo de usuario:</label>
        <input type="radio" name="tipo" value=0> Usuario
        <input type="radio" name="tipo" value=1> Restaurante<br>
      </p>
      <p><button class="w3-button w3-light-grey w3-section" type="submit">Registrar Usuario</button></p>
    </form>
  </div>

<!-- End page content -->
</div>

<!-- Footer -->
<footer class="w3-center w3-light-grey w3-padding-32">
  <p>Uber Eets</p>
</footer>

</body>
</html>
